package p2;

import p1.EAM;
@SuppressWarnings("unused")
public class Bmi_Main 
{

	public static void main(String[] args)
	{
		System.out.println(IsPerfect(6));
	}
	public static boolean IsPerfect(int p_Num)
	{
		int l_sum = 0;
		int l_counter = p_Num-1;
		while(l_counter < 0)
		{			
			if(p_Num % l_counter == 0)
				l_sum += l_counter;
			l_counter--;

		}
		if(l_sum == p_Num)
			return true;
		else 
			return false;
	}

	
}
